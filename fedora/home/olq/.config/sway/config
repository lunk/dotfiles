#client.focused          #3c8d2f #285577 #ffffff #2e9ef4   #52c440
client.focused          #3c8d2f #285577 #ffffff #2e9ef4   #ff5533
client.focused_inactive #0b5200 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

set $volume_changed_sound paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle && $volume_changed_sound
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5% && $volume_changed_sound
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5% && $volume_changed_sound
#bindsym XF86MonBrightnessUp exec /home/olq/hax/program/acpilight/xbacklight -inc 3 -perceived -time 200 -fps 30
#bindsym XF86MonBrightnessDown exec /home/olq/hax/program/acpilight/xbacklight -dec 3 -perceived -time 200 -fps 30
exec --no-startup-id nm-applet
exec --no-startup-id pasystray
input * {
    xkb_layout "se"
    repeat_delay 300
    repeat_rate 40
    xkb_numlock enabled
}

input 1739:52744:SYNA30BD:00_06CB:CE08 {
    tap enabled
    tap_button_map lrm
    scroll_factor 0.5
    dwt enabled
    middle_emulation disabled
    scroll_method two_finger
    natural_scroll disabled
}

input 1118:2090:Microsoft_Microsoft_Pro_Intellimouse_Mouse {
    accel_profile flat
    # pointer_accel -0.7
}

input type:touchpad {
    tap enabled
    middle_emulation disabled
    scroll_method two_finger
    natural_scroll disabled
}

include '$(/usr/libexec/sway/layered-include "/usr/share/sway/config.d/*.conf" "/etc/sway/config.d/*.conf" "${XDG_CONFIG_HOME:-$HOME/.config}/sway/config.d/*.conf")'
exec --no-startup-id /usr/libexec/lxqt-policykit-agent
