{
  "title": "Make circumflex, tilde and backtick work with one stroke on Spanish key layout.",
  "rules": [
    {
      "description": "One stroke circumflex.",
      "manipulators": [
        {
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "close_bracket",
              "modifiers": ["shift"]
            },
            {
              "key_code": "spacebar"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "One stroke tilde.",
      "manipulators": [
        {
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "close_bracket",
              "modifiers": ["option"]
            },
            {
              "key_code": "spacebar"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "No modifier tilde is slash.",
      "manipulators": [
        {
          "from": {
            "key_code": "close_bracket"
          },
          "to": [
            {
              "key_code": "7",
              "modifiers": ["shift"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "PC style pipe",
      "manipulators": [
        {
          "from": {
            "key_code": "grave_accent_and_tilde",
              "modifiers": {
                "mandatory": ["right_gui"]
              }
          },
          "to": [
            {
              "key_code": "7",

              "modifiers": ["left_alt"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Spoof Alt-Enter",
      "manipulators": [
        {
          "from": {
            "key_code": "return_or_enter",
              "modifiers": {
                "mandatory": ["left_alt"]
              }
          },
          "to": [
            {
              "key_code": "backslash",

              "modifiers": ["left_alt"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Fn is Ctrl for left handed letters",
      "manipulators": [
        {
          "from": {
            "key_code": "a",
              "modifiers": {
                "mandatory": ["fn"]
              }
          },
          "to": [
            {
              "key_code": "a",

              "modifiers": ["left_control"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "r",
              "modifiers": {
                "mandatory": ["fn"]
              }
          },
          "to": [
            {
              "key_code": "r",

              "modifiers": ["left_control"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "e",
              "modifiers": {
                "mandatory": ["fn"]
              }
          },
          "to": [
            {
              "key_code": "e",

              "modifiers": ["left_control"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "c",
              "modifiers": {
                "mandatory": ["fn"]
              }
          },
          "to": [
            {
              "key_code": "c",

              "modifiers": ["left_control"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "x",
              "modifiers": {
                "mandatory": ["fn"]
              }
          },
          "to": [
            {
              "key_code": "x",

              "modifiers": ["left_control"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "z",
              "modifiers": {
                "mandatory": ["fn"]
              }
          },
          "to": [
            {
              "key_code": "z",

              "modifiers": ["left_control"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "s",
              "modifiers": {
                "mandatory": ["fn"]
              }
          },
          "to": [
            {
              "key_code": "s",

              "modifiers": ["left_control"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "t",
              "modifiers": {
                "mandatory": ["fn"]
              }
          },
          "to": [
            {
              "key_code": "t",

              "modifiers": ["left_control"]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
